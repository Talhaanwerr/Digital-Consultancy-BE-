{
	"info": {
		"_postman_id": "receipt-upload-collection",
		"name": "Receipt Upload",
		"description": "API collection for the universal Receipt Upload endpoint",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Upload Receipt (Individual Tax Return)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"type\": \"individual-tax-return\",\n  \"id\": 1,\n  \"receiptImageUrl\": \"https://example.com/receipts/payment-123456.jpg\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/receipt",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"receipt"
					]
				},
				"description": "Upload a receipt image URL for an Individual Tax Return"
			},
			"response": []
		},
